
<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <p><%= error %> </p>
    <% end %>
<% end %>

<h2>New Blogger Form</h2>

<%= form_for @blogger do |f|%>
<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :age %>
<%= f.number_field :age %>

<%= f.label :bio %>
<%= f.text_area :bio %>

<%= f.submit%>

<%end %>